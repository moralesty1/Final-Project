<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/movie1"
    tools:context="finalproject.moralesty1.com.final_project.DisplayResults">

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afc639"
        android:gravity="center"
        android:text="Download items" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#44abcdef" />
</LinearLayout>
